<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context="com.oep.interlock_app.Step_Rebuilding">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Rebuilding"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/gettingJobTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - About the Project"
        android:layout_below="@+id/titleTV"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sJHeightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of Job (height):"
        android:layout_marginTop="19dp"
        android:layout_below="@id/gettingJobTV"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/sJLengthTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of Job (length):"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/height_input"
        android:layout_toRightOf="@+id/errorTV"
        android:layout_toEndOf="@+id/errorTV" />

    <TextView
        android:id="@+id/stepsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are the steps..."
        android:layout_above="@+id/curvedStraightRBG"
        android:layout_toRightOf="@+id/errorTV"
        android:layout_toEndOf="@+id/errorTV"
        android:layout_marginBottom="11dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curvedStraightRBG"
        android:layout_alignBottom="@+id/stepRebuildingFAB"
        android:layout_alignRight="@+id/stepsTV"
        android:layout_alignEnd="@+id/stepsTV"
        android:layout_marginBottom="34dp">

        <RadioButton
            android:id="@+id/curvedRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curved"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/straightRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Straight" />
    </RadioGroup>

    <TextView
        android:id="@+id/errorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/curvedStraightRBG"/>

    <TextView
        android:id="@+id/bShiftTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount base Shifted:"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/sJHeightTV"
        android:layout_alignStart="@+id/sJHeightTV" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/stepRebuildingFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/right_arrow"
        android:onClick="fabClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"/>

    <SeekBar
        android:id="@+id/baseShiftSB"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bShiftTV"
        android:layout_alignStart="@+id/bShiftTV"
        android:layout_below="@+id/bShiftTV"
        android:layout_marginTop="22dp"
        android:max="4"
        android:progress="2" />

    <TextView
        android:id="@+id/baseShiftDisplayTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/baseShiftSB"
        android:layout_alignStart="@+id/baseShiftSB"
        android:layout_below="@+id/baseShiftSB"
        android:layout_marginTop="18dp" />

        <EditText
        android:id="@+id/height_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sJHeightTV"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/height_hint"
        android:inputType="numberDecimal"
        style="@style/no_outline_edit_text"/>

    <EditText
        android:id="@+id/length_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sJLengthTV"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/height_hint"
        android:inputType="numberDecimal"
        style="@style/no_outline_edit_text"/>
</RelativeLayout>