<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oep.interlock_app.Wall_Rebuilding2">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff">

        <!--add values below here -->

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="Getting to job / Complications"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/easeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Ease of access:"
            android:textStyle="bold"
            android:layout_below="@+id/pageTitle"
            android:layout_alignLeft="@+id/pageTitle"
            android:layout_alignStart="@+id/pageTitle" />

        <TextView
            android:id="@+id/accDisplay"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/easeTxt"
            android:layout_alignStart="@+id/easeTxt"
            android:layout_below="@+id/easeTxt"
            android:layout_marginTop="45dp"
            android:text="Very accessible"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/locationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/accSlider"
            android:layout_alignStart="@+id/accSlider"
            android:layout_below="@+id/accSlider"
            android:layout_marginTop="31dp"
            android:text="Job location:"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/accSlider"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:max="3"
            android:progress="0"
            android:layout_marginBottom="21dp"
            android:layout_alignBottom="@+id/accDisplay"
            android:layout_alignLeft="@+id/accDisplay"
            android:layout_alignStart="@+id/accDisplay" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/accSlider"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/accSlider"
            android:layout_marginBottom="27dp"
            android:clickable="true"
            app:elevation="0dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/right_arrow" />

        <Spinner
            android:id="@+id/locationSpin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:entries="@array/job_location"
            android:layout_below="@+id/locationTxt"
            android:layout_alignLeft="@+id/locationTxt"
            android:layout_alignStart="@+id/locationTxt" />

        <TextView
            android:id="@+id/roomToMoveTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/locationSpin"
            android:layout_alignStart="@+id/locationSpin"
            android:layout_centerVertical="true"
            android:text="Room to move:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moveDisplay"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/moveSlider"
            android:layout_alignStart="@+id/moveSlider"
            android:layout_below="@+id/moveSlider"
            android:text="Lots of room to move" />

        <SeekBar
            android:id="@+id/moveSlider"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:max="3"
            android:progress="0"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/roomToMoveTxt"
            android:layout_alignLeft="@+id/roomToMoveTxt"
            android:layout_alignStart="@+id/roomToMoveTxt" />

        <!--add values above here -->

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>