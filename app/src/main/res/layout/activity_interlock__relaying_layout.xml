<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/widInput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:hint="Width (ft)"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/lenInput"
        android:layout_alignStart="@+id/lenInput" />

    <EditText
        android:id="@+id/lenInput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Length (ft)"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/widInput"
        android:layout_alignLeft="@+id/ptrnTypeSpin"
        android:layout_alignStart="@+id/ptrnTypeSpin" />

    <Spinner
        android:id="@+id/ptrnTypeSpin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:entries="@array/pattern_type"
        android:layout_below="@+id/lenInput"
        android:layout_centerHorizontal="true" />

</RelativeLayout>