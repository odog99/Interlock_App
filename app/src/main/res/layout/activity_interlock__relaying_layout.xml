<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owenslaptop.interlock_app.Interlock_Relaying">

    <EditText
        android:id="@+id/lenInput"
        android:layout_width="344dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="Length (ft)"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/widInput"
        android:layout_width="344dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="Width (ft)"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/lenInput" />

    <Spinner
        android:id="@+id/PtrnTypeSpin"
        android:layout_width="342dp"
        android:layout_height="27dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:entries="@array/pattern_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widInput" />

    <CheckBox
        android:id="@+id/edgeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Is there edging?"
        app:layout_constraintTop_toBottomOf="@+id/PtrnTypeSpin"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
