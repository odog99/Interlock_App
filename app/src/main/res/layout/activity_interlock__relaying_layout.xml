<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oep.interlock_app.Wall_Rebuilding2">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff">

        <!--add values below here -->

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="31dp"
            android:text="Interlock Relaying"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/widthTxt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pageTitle"
            android:layout_alignStart="@+id/pageTitle"
            android:layout_below="@+id/pageTitle"
            android:layout_marginTop="27dp"
            android:text="Size of the job (Width):"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/widtInput"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/widthTxt"
            android:layout_alignStart="@+id/widthTxt"
            android:layout_below="@+id/widthTxt"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Width (ft)"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/lenTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/widtInput"
            android:layout_alignStart="@+id/widtInput"
            android:layout_below="@+id/widtInput"
            android:layout_marginTop="23dp"
            android:text="Size of the job (Length):"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lenInput"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lenTxt"
            android:layout_alignStart="@+id/lenTxt"
            android:layout_below="@+id/lenTxt"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Length (ft)"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/ptrnTypeSpin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:entries="@array/pattern_type"
            android:layout_below="@+id/lenInput"
            android:layout_alignLeft="@+id/lenInput"
            android:layout_alignStart="@+id/lenInput" />

        <Spinner
            android:id="@+id/jobShapeSpin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ptrnTypeSpin"
            android:layout_alignStart="@+id/ptrnTypeSpin"
            android:layout_below="@+id/ptrnTypeSpin"
            android:layout_marginTop="42dp"
            android:entries="@array/job_shape_relay" />

        <TextView
            android:id="@+id/ptrnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ptrnTypeSpin"
            android:layout_alignStart="@+id/ptrnTypeSpin"
            android:layout_below="@+id/lenInput"
            android:layout_marginTop="16dp"
            android:text="Pattern Type:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobShapeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/jobShapeSpin"
            android:layout_alignStart="@+id/jobShapeSpin"
            android:layout_below="@+id/ptrnTypeSpin"
            android:layout_marginTop="20dp"
            android:text="Shape of job:"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/jobShapeSpin"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/jobShapeSpin"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/right_arrow" />

        <CheckBox
            android:id="@+id/edgeCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nextBtn"
            android:layout_alignLeft="@+id/jobShapeSpin"
            android:layout_alignStart="@+id/jobShapeSpin"
            android:layout_marginBottom="7dp"
            android:text="Is there edging?" />

        <!--add values above here -->

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>