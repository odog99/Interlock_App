<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oep.interlock_app.Wall_Rebuilding">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#ffffffff">

        <!--add values below here -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estimation_title"
            android:textStyle="bold"
            android:id="@+id/headlineTextView"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headlineTextView"
            android:layout_marginTop="15dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sizeJobHTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height:"/>

                <TextView
                    android:id="@+id/SizeJobLTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sizeJobHTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Length:" />

                <TextView
                    android:id="@+id/baseShiftTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/SizeJobLTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Amount Base Shifted:" />

                <TextView
                    android:id="@+id/stepsAreTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/baseShiftTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Steps are:" />

                <TextView
                    android:id="@+id/locationTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stepsAreTV"
                    android:layout_marginTop="15dp"
                    android:text="Location:" />

                <TextView
                    android:id="@+id/easeTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/locationTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Ease of Access:"/>

                <TextView
                    android:id="@+id/roomMoveTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/easeTitleTV"
                    android:layout_alignStart="@+id/easeTitleTV"
                    android:layout_below="@+id/easeTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Room to Maneuver:" />

                <TextView
                    android:id="@+id/gluedTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/roomMoveTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Steps Glued:" />

                <TextView
                    android:id="@+id/rootsTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gluedTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Tree roots:" />

                <TextView
                    android:id="@+id/clipsTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rootsTitleTV"
                    android:layout_marginTop="15dp"
                    android:text="Are there Clips:"/>

                <TextView
                    android:id="@+id/hardLineTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard Line:"
                    android:layout_below="@+id/clipsTitleTV"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/sizeHDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/sizeJobHTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/sizeLDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/SizeJobLTitleTV" />

                <TextView
                    android:id="@+id/baseShiftDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/baseShiftTitleTV"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/stepsAreDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/stepsAreTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/locationDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/locationTitleTV" />

                <TextView
                    android:id="@+id/easeAccessDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/easeTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/roomManDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/roomMoveTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/stepsGluedDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/gluedTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/treeRootsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/rootsTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/clipsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/clipsTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/hardLineDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/hardLineTitleTV"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </ScrollView>

        <!--add values above here -->
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coordinator_layout">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/stepRebuildingFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="normal"
                app:srcCompat="@drawable/check_mark"
                android:onClick="fabClicked"
                android:layout_gravity="bottom|right"
                android:layout_margin="25dp"/>
        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>