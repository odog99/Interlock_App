<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    tools:context="com.example.owenslaptop.interlock_app.Step_Rebuilding2">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Step Rebuilding"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/gettingJobTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text=" - Getting to the Job"
        android:textStyle="bold"
        android:layout_below="@id/titleTV"/>

    <Spinner
        android:id="@+id/locationSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/no_outline_spinner"
        android:layout_below="@+id/locationTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gateRBG"
        android:layout_below="@+id/easeTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/sGRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Skinny gate" />

        <RadioButton
            android:id="@+id/lTRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Long thoroughfare" />
    </RadioGroup>

    <TextView
        android:id="@+id/easeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ease of Access..."
        android:layout_below="@+id/locationSp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/locationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/gettingJobTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/roomTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount of Room to Maneuver:"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/gateRBG"
        android:layout_alignLeft="@+id/gateRBG"
        android:layout_alignStart="@+id/gateRBG" />

    <Spinner
        android:id="@+id/roomSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomTV"
        android:layout_alignLeft="@+id/gateRBG"
        android:layout_alignStart="@+id/gateRBG"
        android:layout_marginTop="13dp"
        style="@style/no_outline_spinner"/>

    <TextView
        android:id="@+id/errorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/stepRebuildingFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/right_arrow"
        android:onClick="fabClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"/>

</RelativeLayout>