<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oep.interlock_app.Wall_Rebuilding2">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff">

        <!--add values below here -->

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joint fill Replacment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/gettingJobTV"
            android:layout_alignStart="@+id/gettingJobTV"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/gettingJobTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - About the Project"
            android:textStyle="bold"
            android:layout_below="@+id/titleTV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/widthTxt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gettingJobTV"
            android:layout_alignStart="@+id/gettingJobTV"
            android:layout_below="@+id/gettingJobTV"
            android:layout_marginTop="27dp"
            android:text="Size of the job (Width):"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/widtInput"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/widthTxt"
            android:layout_alignStart="@+id/widthTxt"
            android:layout_below="@+id/widthTxt"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Width (ft)"
            android:inputType="numberDecimal"
            android:layout_alignRight="@+id/gettingJobTV"
            android:layout_alignEnd="@+id/gettingJobTV" />

        <TextView
            android:id="@+id/lenTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/widtInput"
            android:layout_alignStart="@+id/widtInput"
            android:layout_below="@+id/widtInput"
            android:layout_marginTop="23dp"
            android:text="Size of the job (Length):"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lenInput"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lenTxt"
            android:layout_alignStart="@+id/lenTxt"
            android:layout_below="@+id/lenTxt"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Length (ft)"
            android:inputType="numberDecimal"
            android:layout_alignRight="@+id/gettingJobTV"
            android:layout_alignEnd="@+id/gettingJobTV" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/stepRebuildingFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@drawable/right_arrow"
            android:onClick="fabClicked"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"/>


        <TextView
            android:id="@+id/patternTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lenInput"
            android:layout_marginTop="18dp"
            android:text="Interlock Pattern:"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/patternSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:entries="@array/pattern"
            android:layout_below="@+id/patternTV"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/sizeJointTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/patternSp"
            android:layout_marginTop="26dp"
            android:text="Size of Joints:" />

        <SeekBar
            android:id="@+id/sizeJointsSB"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/stepRebuildingFAB"
            android:layout_alignLeft="@+id/lenInput"
            android:layout_alignStart="@+id/lenInput"
            android:max="4"
            android:progress="2" />

        <TextView
            android:id="@+id/sizeDisplayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sizeJointsSB"
            android:layout_alignStart="@+id/sizeJointsSB"
            android:layout_alignTop="@+id/stepRebuildingFAB" />

        <!--add values above here -->

    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>