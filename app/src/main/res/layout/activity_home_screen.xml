<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owenslaptop.interlock_app.HomeScreen">

    <Button
        android:id="@+id/relayBtn"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:text="Interlock Relaying"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/wallRebuildBtn" />

    <Button
        android:id="@+id/wallRebuildBtn"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:text="Wall Rebuilding"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/stepRebuildBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/stepRebuildBtn"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:text="Step Rebuild"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp" />


</android.support.constraint.ConstraintLayout>
